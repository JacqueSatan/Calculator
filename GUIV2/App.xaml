<Application
    x:Class="GUIV2.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GUIV2"
    RequestedTheme="Dark">

    <Application.Resources>
        <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Black" Opacity="0.7"/>
        <SolidColorBrush x:Key="TextControlForegroundFocused" Color="Transparent"/>
        <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="White" Opacity="0.8"/>
    </Application.Resources>

</Application>
